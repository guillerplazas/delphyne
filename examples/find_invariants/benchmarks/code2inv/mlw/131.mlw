use int.Int

let main () diverges =
  let ref d1 = 1 in
  let ref d2 = 1 in
  let ref d3 = 1 in
  let ref x1 = 1 in
  let ref x2 = any int in
  let ref x3 = any int in
  while x1 > 0 do
    if x2 > 0 then
      if x3 > 0 then begin
        x1 <- x1 - d1;
        x2 <- x2 - d2;
        x3 <- x3 - d3
      end
  done;
  assert { x3 >= 0 }